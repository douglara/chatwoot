<!DOCTYPE html>
<html>
  <head>
    <title>SuperAdmin | Chatwoot</title>
    <%= javascript_pack_tag 'superadmin' %>
    <%= stylesheet_pack_tag 'superadmin' %>
  </head>
  <body data-gr-c-s-loaded="true">
    <div id="app" class="superadmin-body app-wrapper app-root">
      <div class="medium column login">
        <div class="text-center medium-12 login__hero align-self-top">
          <img
            src="/brand-assets/logo.svg"
            alt="Chatwoot logo"
            class="hero__logo"
          />
          <h2 class="hero--title">
            Chatwoot + WPP ConnectðŸ‘‹
          </h2>
        </div>
        <div class="row align-center">
          <div class="small-12 medium-4 column">
            <%= form_tag('/', method: :post, class: 'login-box column align-self-top') do %>
              <div class="column log-in-form">
                <% if flash[:error].present? %>
                <div data-alert class="alert-box warning"><%= flash[:error] %></div>
                <% end %>
                <label>
                  <span>Name</span>
                  <%= text_field :wpp_connect, :name, placeholder: "Whatsapp 1", required: true, value: @wpp_connect.name %>
                </label>
                <label>
                  <span>Status</span>
                  <span><%= @wpp_connect.status_connection == 'disconnected' ? 'Desconectado' : 'Conectado'  %></span>
                </label>
                <%= link_to "Reconectar", app_wpp_connect_qr_code_path(
                  api_access_token: params[:api_access_token], wpp_connect_id: @wpp_connect.id, account_id: params[:account_id]
                  ), style:"margin-top: 10px", class: "button nice large expanded" %>
                <button type="submit" class="button nice large expanded" style="margin-top: 10px">
                  Sincronizar mensagens
                </button>
                <%= link_to "Voltar", root_path(), style:"margin-top: 10px", class: "button nice large expanded" %>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </body>
</html>
